    "paths": {
        "/bookmarks": {
            "post": {
                "tags": [
                    "Bookmarks"
                ],
                "summary": "Create a bookmark",
                "operationId": "5df9fe3aa431ffd75eeed821c6c30074",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "github_id",
                                    "resource_id"
                                ],
                                "properties": {
                                    "github_id": {
                                        "type": "integer",
                                        "example": 6729608
                                    },
                                    "resource_id": {
                                        "type": "integer",
                                        "example": 11
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Bookmark"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Bookmarks"
                ],
                "summary": "Delete a bookmark",
                "operationId": "156c8c638a41e9c78f8ab28de90dec7d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "github_id",
                                    "resource_id"
                                ],
                                "properties": {
                                    "github_id": {
                                        "type": "integer",
                                        "example": 6729608
                                    },
                                    "resource_id": {
                                        "type": "integer",
                                        "example": 11
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Bookmark deleted successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/bookmarks/{github_id}": {
            "get": {
                "tags": [
                    "Bookmarks"
                ],
                "summary": "Get all bookmarks for a student",
                "operationId": "151fbc647d8dbc35020878212602047d",
                "parameters": [
                    {
                        "name": "github_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 6729608
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Bookmark"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/resources": {
            "get": {
                "tags": [
                    "Resources"
                ],
                "summary": "Get all resources",
                "description": "return a list of all resources",
                "operationId": "ee96de2f37d473ea4740b7700ddd1daf",
                "responses": {
                    "200": {
                        "description": "Resource list",
