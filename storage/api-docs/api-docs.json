{
    "openapi": "3.0.0",
    "info": {
        "title": "Swagger Documentation for ITA-Wiki",
        "description": "Project ITA-Wiki documentation wall",
        "version": "1.0.0.0"
    },
    "paths": {
        "/api/resources": {
            "get": {
                "summary": "Get all resources",
                "description": "return a list of all resources",
                "operationId": "ee96de2f37d473ea4740b7700ddd1daf",
                "responses": {
                    "200": {
                        "description": "Resource list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resources": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Resource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/roles": {
            "post": {
                "summary": "Create a new role",
                "description": "Allows an authorized user to create a new role for a specific GitHub ID.",
                "operationId": "4131bb39b430bdf2d95b73111d2e126a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "github_id",
                                    "role",
                                    "authorized_github_id"
                                ],
                                "properties": {
                                    "github_id": {
                                        "description": "GitHub ID of the user to assign the role",
                                        "type": "integer",
                                        "example": 12345
                                    },
                                    "role": {
                                        "description": "Role to be assigned",
                                        "type": "string",
                                        "example": "mentor"
                                    },
                                    "authorized_github_id": {
                                        "description": "GitHub ID of the user making the request (must have permissions)",
                                        "type": "integer",
                                        "example": 67890
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Role created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Rol creado con Ã©xito."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Unauthorized: Cannot create a role equal or higher than your own",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "No puedes crear un rol igual o superior al tuyo."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/user-signedin-as": {
            "get": {
                "summary": "Retrieve a role by GitHub ID",
                "description": "Fetches a role using the provided GitHub ID.",
                "operationId": "199a3501936a1430a8c84f030f9e6cb1",
                "parameters": [
                    {
                        "name": "github_id",
                        "in": "query",
                        "description": "GitHub ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 12345
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Role found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Role found."
                                        },
                                        "role": {
                                            "$ref": "#/components/schemas/Role"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Role not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Role not found."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Resource": {
                "title": "Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "github_id": {
                        "type": "integer",
                        "example": 12345
                    },
                    "description": {
                        "type": "string",
                        "example": "Lorem Ipsum ...",
                        "nullable": true
                    },
                    "title": {
                        "type": "string",
                        "example": "Lorem Ipsum ...",
                        "nullable": true
                    },
                    "url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://www.hola.com",
                        "nullable": true
                    },
                    "category": {
                        "type": "string",
                        "enum": [
                            "Node",
                            "React",
                            "Angular",
                            "JavaScript",
                            "Java",
                            "Fullstack PHP",
                            "Data Science",
                            "BBDD"
                        ],
                        "example": "Node"
                    },
                    "theme": {
                        "type": "string",
                        "enum": [
                            "All",
                            "Components",
                            "UseState & UseEffect",
                            "Eventos",
                            "Renderizado condicional",
                            "Listas",
                            "Estilos",
                            "Debugging",
                            "React Router"
                        ],
                        "example": "All"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "Video",
                            "Cursos",
                            "Blog"
                        ],
                        "example": "Video"
                    },
                    "votes": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Role": {
                "description": "Role object representing a user's role and associated GitHub ID",
                "properties": {
                    "github_id": {
                        "description": "The GitHub ID of the user",
                        "type": "integer",
                        "example": 6729608
                    },
                    "role": {
                        "description": "The role of the user",
                        "type": "string",
                        "example": "admin"
                    },
                    "isStudent": {
                        "description": "Check if the user is a student",
                        "type": "boolean",
                        "example": false
                    },
                    "isMentor": {
                        "description": "Check if the user is a mentor",
                        "type": "boolean",
                        "example": false
                    },
                    "isAdmin": {
                        "description": "Check if the user is an admin",
                        "type": "boolean",
                        "example": true
                    },
                    "isSuperadmin": {
                        "description": "Check if the user is a superadmin",
                        "type": "boolean",
                        "example": false
                    }
                },
                "type": "object"
            }
        }
    }
}