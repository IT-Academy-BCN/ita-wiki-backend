{
    "openapi": "3.0.0",
    "info": {
        "title": "Swagger Documentation for ITA-Wiki",
        "description": "Project ITA-Wiki documentation wall",
        "version": "1.0.0.0"
    },
    "paths": {
        "/api/resources": {
            "get": {
                "summary": "Get all resources",
                "description": "return a list of all resources",
                "operationId": "ee96de2f37d473ea4740b7700ddd1daf",
                "responses": {
                    "200": {
                        "description": "Resource list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "resources": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Resource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "summary": "Retrieve a role by GitHub ID",
                "description": "Fetches a role using the provided GitHub ID. If the role does not exist, it returns an error.",
                "operationId": "902de143a0c91c68a1742a2a0907a700",
                "parameters": [
                    {
                        "name": "github_id",
                        "in": "query",
                        "description": "GitHub ID of the user",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 6729608
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Role found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Role found."
                                        },
                                        "role": {
                                            "$ref": "#/components/schemas/Role"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Role not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Role not found."
                                        },
                                        "role": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Resource": {
                "title": "Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "github_id": {
                        "type": "integer",
                        "example": 12345
                    },
                    "description": {
                        "type": "string",
                        "example": "Lorem Ipsum ...",
                        "nullable": true
                    },
                    "title": {
                        "type": "string",
                        "example": "Lorem Ipsum ...",
                        "nullable": true
                    },
                    "url": {
                        "type": "string",
                        "format": "url",
                        "example": "https://www.hola.com",
                        "nullable": true
                    },
                    "category": {
                        "type": "string",
                        "enum": [
                            "Node",
                            "React",
                            "Angular",
                            "JavaScript",
                            "Java",
                            "Fullstack PHP",
                            "Data Science",
                            "BBDD"
                        ],
                        "example": "Node"
                    },
                    "theme": {
                        "type": "string",
                        "enum": [
                            "All",
                            "Components",
                            "UseState & UseEffect",
                            "Eventos",
                            "Renderizado condicional",
                            "Listas",
                            "Estilos",
                            "Debugging",
                            "React Router"
                        ],
                        "example": "All"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "Video",
                            "Cursos",
                            "Blog"
                        ],
                        "example": "Video"
                    },
                    "votes": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "Role": {
                "description": "Role object representing a user's role and associated GitHub ID",
                "properties": {
                    "github_id": {
                        "description": "The GitHub ID of the user",
                        "type": "integer",
                        "example": 6729608
                    },
                    "role": {
                        "description": "The role of the user",
                        "type": "string",
                        "example": "student"
                    }
                },
                "type": "object"
            }
        }
    }
}